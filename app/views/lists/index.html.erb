
<div class="container text-center">
  <h1>My List of Movies</h1>
  <div class="row grid gap-2">
    <% @lists.each do |list| %>
      <div class="g-col-3 card ">
        <h3> <%= link_to list.name, list_path(list) , class: 'text-decoration-none'%> </h3>
      </div>
    <% end %>
  </div>

  <%= link_to 'Create a list', new_list_path, class: 'btn btn-primary m-4' %>
</div>
